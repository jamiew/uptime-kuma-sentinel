{
	"name": "uptime-kuma-sentinel",
	"version": "1.0.0",
	"description": "Auto-pause/resume Uptime Kuma monitors based on connectivity",
	"type": "module",
	"main": "dist/sentinel.js",
	"scripts": {
		"build": "tsc",
		"start": "node dist/sentinel.js",
		"dev": "tsx watch src/sentinel.ts",
		"test": "vitest",
		"test:ci": "vitest run --coverage",
		"format": "biome format --write .",
		"lint": "biome lint --write .",
		"check": "biome check --write .",
		"typecheck": "tsc --noEmit"
	},
	"keywords": ["uptime-kuma", "monitoring", "docker", "typescript"],
	"author": "Uptime Kuma Sentinel",
	"license": "MIT",
	"dependencies": {
		"socket.io-client": "^4.7.5"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@types/node": "^22.7.5",
		"@vitest/coverage-v8": "^2.1.5",
		"tsx": "^4.19.2",
		"typescript": "^5.6.3",
		"vite": "^5.4.11",
		"vitest": "^2.1.5"
	},
	"engines": {
		"node": ">=20.0.0"
	},
	"packageManager": "pnpm@9.15.9"
}
